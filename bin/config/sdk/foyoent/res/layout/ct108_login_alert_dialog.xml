<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/ct108_login_background"
    android:orientation="vertical"
    android:padding="0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >
        
        <ImageButton
            android:id="@+id/back"
            android:layout_marginLeft="@dimen/back_left_pading"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_centerVertical="true"
            android:background="@drawable/ct108_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/ct108_adminlogin"
            android:textColor="@color/ct108_title_charactor_color"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/shutdown_dialog"
            android:layout_width="@dimen/shut_down_width"
            android:layout_height="@dimen/shut_down_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ct108_shutdown_select" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <LinearLayout
            android:id="@+id/errorLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ct108_errorLogin"
                android:textColor="@color/ct108_text_color"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/ct108_account"
                    android:textColor="@color/ct108_text_color"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="46dp"
                    android:background="@drawable/ct108_null"
                    android:gravity="center_vertical"
                    android:hint="@string/ct108_username_phone"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text"
                    android:maxLength="64"
                    android:minWidth="150dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/ct108_text_color"
                    android:textColorHint="@color/ct108_text_hint_color"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/username_clear"
                        android:layout_width="@dimen/clear_width"
                        android:layout_height="@dimen/clear_height"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/ct108_x_select"
                        android:visibility="invisible" />

                    <ImageButton
                        android:id="@+id/login_username_up"
                        android:layout_width="@dimen/up_width"
                        android:layout_height="@dimen/up_height"
                        android:background="@drawable/ct108_arrow" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ct108_background_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="1dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/ct108_login_password"
                    android:textColor="@color/ct108_text_color"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="46dp"
                    android:background="@drawable/ct108_null"
                    android:hint="@string/ct108_inputpassword"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/ct108_text_hint_color"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/password_clear"
                        android:layout_width="@dimen/clear_width"
                        android:layout_height="@dimen/clear_height"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/ct108_x_select"
                        android:visibility="invisible" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ct108_background_line" />

        <RelativeLayout
            android:id="@+id/verifycode_layout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/ct108_register_verify"
                android:textColor="@color/ct108_title_charactor_color"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/verify_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="55dp"
                android:background="@drawable/ct108_null"
                android:hint="@string/ct108_login_verifycode"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLength="4"
                android:paddingLeft="5dp"
                android:textColor="@color/ct108_title_charactor_color"
                android:textColorHint="@color/ct108_text_hint_color"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/acquire_verify_image"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@color/ct108_title_charactor_color"
                android:textSize="12dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/verifyCodeLineImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ct108_background_line"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp" >

            <TextView
                android:id="@+id/errorhint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@color/ct108_error_hint"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="@string/ct108_forget_password"
                android:textColor="@color/ct108_font_color_green_light"
                android:textSize="16dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:padding="0dp"
            android:background="@drawable/ct108_button_select"
            android:text="@string/ct108_login"
            android:textColor="@color/ct108_white"
            android:textSize="22dp" />
    </LinearLayout>
</LinearLayout>