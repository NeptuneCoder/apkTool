<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ct108_login_background"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="5dp" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_left_pading"
            android:background="@drawable/ct108_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/ct108_promtp"
            android:textColor="@color/ct108_title_charactor_color"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/shutdown_button"
            android:layout_width="@dimen/shut_down_width"
            android:layout_height="@dimen/shut_down_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ct108_shutdown_select"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/prompt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="left"
        android:text="@string/ct108_promtp"
        android:textColor="@color/ct108_text_color"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <Button
            android:id="@+id/prompt_left"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:background="@drawable/ct108_button_prompt_left"
            android:gravity="center"
            android:text="@string/ct108_continue_login"
            android:textColor="@color/ct108_white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/prompt_right"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:background="@drawable/ct108_button_prompt_right"
            android:gravity="center"
            android:text="@string/ct108_go_find_password"
            android:textColor="@color/ct108_white"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>