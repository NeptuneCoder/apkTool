<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yxd_at_whitebg"
    android:orientation="vertical" >

    <include
        android:id="@+id/yxd_title"
        layout="@layout/yxd_ai_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/yxd_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/yxd_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/yxd_content"
            android:layout_alignTop="@id/yxd_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/yxd_bg_empty"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>