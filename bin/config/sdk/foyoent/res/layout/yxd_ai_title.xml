<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/yxd_title_height"
    android:background="@drawable/yxd_sl_bg_white_3dp_up" >

    <ImageView
        android:id="@+id/yxd_title_left"
        android:layout_width="@dimen/yxd_title_height"
        android:layout_height="@dimen/yxd_title_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/yxd_hint"
        android:padding="12dp"
        android:src="@drawable/yxd_ic_back" />

    <TextView
        android:id="@+id/yxd_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/yxd_login_admin"
        android:textColor="@drawable/yxd_black_393"
        android:textSize="@dimen/yxd_title_size" />

    <ImageView
        android:id="@+id/yxd_title_right"
        android:layout_width="@dimen/yxd_title_height"
        android:layout_height="@dimen/yxd_title_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/yxd_hint"
        android:padding="12dp"
        android:src="@drawable/yxd_ic_close" />

</RelativeLayout>