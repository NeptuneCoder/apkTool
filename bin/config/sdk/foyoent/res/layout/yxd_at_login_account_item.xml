<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/login_item_account"
        android:layout_width="0dp"
        android:layout_height="@dimen/yxd_edit_height"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@drawable/yxd_gray_656"
        android:textCursorDrawable="@null"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/account_item_del"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/yxd_hint"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:src="@drawable/yxd_ic_edit_remove" />
	
</LinearLayout>