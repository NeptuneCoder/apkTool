<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:gravity="center"
        android:textColor="@color/yxd_black_cl_4c"
        android:layout_gravity="center_horizontal"
        android:text="@string/yxd_recharge_msg"
        android:textSize="15sp"/>
    
    <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        
          <Button 
              android:id="@+id/exit_btn"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight="1"
	        android:background="@drawable/yxd_sl_btn_exit"
	        android:textColor="@color/yxd_black_cl_4c"
	        android:textSize="16sp"
	         android:layout_marginRight="5dp"
	        android:text="确认退出"/>
          <Button 
              android:id="@+id/continue_pay_btn"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight="1"
	        android:background="@drawable/yxd_sl_btn_blue_3dp"
	        android:textColor="@drawable/yxd_white_fff"
	        android:textSize="16sp"
	        android:layout_marginLeft="5dp"
	        android:text="继续支付"/>
        
    </LinearLayout>
  

</LinearLayout>
