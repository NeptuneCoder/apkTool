<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ct108_login_background"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="5dp" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_left_pading"
            android:background="@drawable/ct108_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/ct108_forgetpassword"
            android:textColor="@color/ct108_title_charactor_color"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/shutdown_dialog"
            android:layout_width="@dimen/shut_down_width"
            android:layout_height="@dimen/shut_down_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ct108_shutdown_select" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <LinearLayout
            android:id="@+id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/ct108_account"
                    android:textColor="@color/ct108_text_color"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/findUser"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/ct108_null"
                    android:gravity="center_vertical"
                    android:hint="@string/ct108_username_phone"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text"
                    android:maxLength="64"
                    android:minWidth="140dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/ct108_text_color"
                    android:textColorHint="@color/ct108_text_hint_color"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/username_clear"
                        android:layout_width="@dimen/clear_width"
                        android:layout_height="@dimen/clear_height"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/ct108_x_select" />

                    <ImageButton
                        android:id="@+id/login_username_up"
                        android:layout_width="@dimen/up_width"
                        android:layout_height="@dimen/up_height"
                        android:background="@drawable/ct108_arrow" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ct108_background_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/errorhint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/ct108_usernamenotexists"
                android:textColor="@color/ct108_error_hint"
                android:textSize="15dp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/find_register"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="0dp"
                android:background="@drawable/ct108_button_select"
                android:gravity="center"
                android:text="@string/ct108_nextStep"
                android:textColor="@color/ct108_white"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>