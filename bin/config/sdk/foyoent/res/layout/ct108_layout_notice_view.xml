<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ct108_noticeview_bg">
        <TextView
            android:id="@+id/textview_notice_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:text="这是一条公告啊公告啊这是一条公告啊公告啊"/>

        <ImageView
            android:id="@+id/imageview_horn"
            android:layout_marginLeft="11dp"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@+id/textview_notice_content"
            android:src="@drawable/ct108_noticeview_icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imagebutton_close"
            android:src="@drawable/ct108_noticeview_close"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/textview_notice_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>