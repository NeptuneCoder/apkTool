<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ct108_coupon_shape_corners_bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="@dimen/ct108_pay_dialog_back_icon_width"
                android:layout_height="@dimen/ct108_pay_dialog_back_icon_width"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/pay_dialog_coupon_list_padding"
                android:src="@drawable/ct108_p_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/ct108_coupon_list_title"
            android:textColor="@color/ct108_pay_frame_title_v"
            android:textSize="@dimen/text_size_large" />

        <RelativeLayout
            android:id="@+id/iv_close"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/ct108_pay_dialog_close_icon_width"
                android:layout_height="@dimen/ct108_pay_dialog_close_icon_width"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pay_dialog_coupon_list_padding"
                android:background="@drawable/ct108_shutdown" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="14dp" />

    <ListView
        android:id="@+id/counpon_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:divider="@color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
</LinearLayout>
