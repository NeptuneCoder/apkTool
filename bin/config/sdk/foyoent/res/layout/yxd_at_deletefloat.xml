<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yxd_at_whitebg"
    android:orientation="vertical"
    android:padding="16dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        android:gravity="center"
        android:text="摇一摇手机显示/隐藏小图标"
        android:textColor="#ffa3a3a3"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/yxd_shake" />

    <CheckBox
        android:id="@+id/cb_closehint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="不再显示"
        android:textColor="#ffa3a3a3"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:textSize="16sp"
            android:textColor="@drawable/yxd_white_fff"
            android:background="@drawable/yxd_sl_btn_gray_3dp"
            android:padding="6dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消" />

        <TextView
            android:textSize="16sp"
            android:textColor="@drawable/yxd_white_fff"
            android:background="@drawable/yxd_sl_btn_blue_3dp"
            android:padding="6dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_btn_hide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="隐藏" />
    </LinearLayout>

</LinearLayout>